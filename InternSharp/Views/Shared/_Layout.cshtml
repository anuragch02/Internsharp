<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternSharp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Internship.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ApplicationSubmission.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ResumeUpload.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/InternSharp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    @{

        var useremail = Context.Session.GetString("UserEmail");
        var username = Context.Session.GetString("UserName");
        var isAuthenticated = !string.IsNullOrEmpty(useremail) || User.Identity.IsAuthenticated;

    }
    <div id="webcrumbs" class="w-100">
        <div class="min-h-screen bg-white">
            <header class="bg-primary-600 text-white shadow-md" style="z-index:999;">
                <div class=" mx-auto px-4 py-4 flex flex-col md:flex-row justify-between items-center">
                    <div class="flex items-center md:mb-0">
                        <h1 class="text-xl font-bold text-white"><a href="https://localhost:7252/"> InternSharp </a></h1>
                    </div>
                    <nav class="flex flex-col md:flex-row items-center space-y-2 md:space-y-0 md:space-x-6">
                    <!-- Internships Dropdown --> 
                    <div class="dropdown">
                        <a class="nav-link hover:text-primary-200 font-bold transition-colors dropdown-toggle" asp-controller="Students" asp-action="Internship" id="internshipsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Internships 
                        </a> 
                        <ul class="dropdown-menu p-2 " aria-labelledby="internshipsDropdown"> 
                                <li><h6 class="dropdown-header">Top Locations</h6></li> 
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">Work from Home</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Internship">Internship in Bangalore</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Internship">Internship in Delhi</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Internship">Internship in Hyderabad</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Internship">Internship in Mumbai</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Internship">Internship in Chennai</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Internship">Internship in Pune</a></li> 
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Internship">Internship in Kolkata</a></li> 
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Internship">Internship in Jaipur</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Internship">International Internship</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Internship">View all internships</a></li>
                            </ul> 
                        </div>
                    <!-- Jobs Dropdown --> 
                        <div class="dropdown"> 
                            <a class="nav-link hover:text-primary-200 font-bold transition-colors dropdown-toggle" asp-controller="Students" asp-action="Jobs" id="JobsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Jobs 
                            </a> 
                            <ul class="dropdown-menu p-2" aria-labelledby="JobsDropdown"> 
                                <li><h6 class="dropdown-header">Top Locations</h6></li> 
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">Work from Home</a></li> 
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">Jobs in Bangalore</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">Jobs in Delhi</a></li> 
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">Jobs in Hyderabad</a></li> 
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">Jobs in Mumbai</a></li> 
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">Jobs in Chennai</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">Jobs in Pune</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">Jobs in Kolkata</a></li> 
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">Jobs in Jaipur</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">International Jobs</a></li>
                                <li><a class="dropdown-item" asp-controller="Students" asp-action="Jobs">View all jobs</a></li>
                            </ul> 
                        </div>
                        @if (isAuthenticated)
                        {
                            <p class =" font-bold transition-colors ">@username</p>
                            <a class="px-4 py-2 bg-white text-primary-600 rounded-lg hover:bg-primary-400 transition-colors"
                               asp-controller="Accounts" asp-action="SignOut">
                                Sign Out
                            </a>
                        }
                        else
                        {
                            <a class="px-4 py-2 bg-white text-primary-600 rounded-lg hover:bg-primary-400 transition-colors"
                               asp-controller="Accounts" asp-action="SignIn">
                                Sign In
                            </a>
                        }
                    </nav>
                </div>
            </header>
            <div class="">
                <main role="main" class="">
                    @RenderBody()
                </main>
            </div>
        <!-- Footer section -->
            <footer class="bg-gray-800 text-white py-10 mt-12">
                <div class=" mx-auto px-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                        <div>
                            <h3 class="text-lg font-semibold mb-4">About us</h3>
                            <ul class="space-y-2">
                                <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Post a job</a></li>
                                <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Interview Tips</a></li>
                                <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Success Stories</a></li>
                            </ul>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold mb-4">Terms & Conditions</h3>
                            <ul class="space-y-2">
                                <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Privacy</a></li>
                                <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Contact us</a></li>
                            </ul>
                        </div>

                        <div>
                            <h3 class="text-lg font-semibold mb-4">Social Media Links</h3>
                            <ul class="space-y-2">
                                <li><a href="#" class="text-gray-400 hover:text-white transition-colors"><i class="fa-brands fa-facebook text-xl"></i> Facebook</a></li>
                                <li><a href="#" class="text-gray-400 hover:text-white transition-colors"><i class="fa-brands fa-twitter text-xl"></i> Twitter</a></li>
                                <li><a href="#" class="text-gray-400 hover:text-white transition-colors"><i class="fa-brands fa-linkedin text-xl"></i> Linkedin</a></li>
                                <li><a href="#" class="text-gray-400 hover:text-white transition-colors"><i class="fa-brands fa-instagram text-xl"></i> Instagram</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="mt-8 pt-8 border-top border-gray-700 d-flex flex-column flex-md-row justify-content-between align-items-center">
                        <p class="text-gray-400">© 2025 InternSharp. All rights reserved.</p>
                        <div class="mt-4 mt-md-0 d-flex gap-3">
                            <a href="#" class="text-gray-400 hover:text-white transition-colors">Privacy Policy</a>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors">Terms of Service</a>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors">Cookie Policy</a>
                        </div>
                    </div>
                </div>
            </footer>
       </div>
   </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
