    <div id="webcrumbs">
        <div class="min-h-screen bg-white">
            <header class="shadow-md" style="background-color:var(--primary-color); color:var(--text-color);">
                <div class="container mx-auto px-4 py-4 flex flex-col md:flex-row justify-between items-center">
                    <div class="flex items-center mb-4 md:mb-0">
                        <h1 class="text-xl font-bold" style="color:#008bdc">Intern<span style="color:#555">Sharp</span></h1>
                    </div>
                    <nav class="nav flex flex-col md:flex-row items-center space-y-2 md:space-y-0 md:space-x-6">
