@model InternSharp.Models.InternshipModel
@{
    ViewBag.Title = "Internship Details";
}

<div class="bg-gray-100 min-h-screen py-10 px-4">
    <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-6">
        <!-- Left Column -->
        <div class="md:col-span-2 bg-white p-8 rounded-2xl shadow">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">@Model.Title</h1>
            <p class="text-gray-600 text-lg mb-6">@Model.CompanyName</p>

            <div class="flex flex-wrap gap-4 mb-6">
                <div class="bg-gray-50 p-4 rounded-xl w-40">
                    <p class="text-gray-500 text-sm">Employment Type</p>
                    <p class="font-semibold text-gray-800">@Model.InternshipType</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-xl w-40">
                    <p class="text-gray-500 text-sm">Duration</p>
                    <p class="font-semibold text-gray-800">@Model.Duration</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-xl w-40">
                    <p class="text-gray-500 text-sm">Stipend</p>
                    <p class="font-semibold text-gray-800">@Model.Stipend</p>
                </div>
            </div>

            <!-- About the Role -->
            <div class="mb-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-2">About the Role</h2>
                <p class="text-gray-700 leading-relaxed">@Model.FullDescriptionJson?.AboutRole</p>
            </div>

            <!-- Responsibilities -->
            @if (Model.FullDescriptionJson?.Responsibilities?.Count > 0)
            {
                <div class="mb-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">Responsibilities</h2>
                    <ul class="list-disc list-inside text-gray-700 space-y-1">
                        @foreach (var item in Model.FullDescriptionJson.Responsibilities)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </div>
            }

            <!-- Requirements -->
            @if (Model.FullDescriptionJson?.Requirements?.Count > 0)
            {
                <div class="mb-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">Requirements</h2>
                    <ul class="list-disc list-inside text-gray-700 space-y-1">
                        @foreach (var item in Model.FullDescriptionJson.Requirements)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </div>
            }

            <!-- Benefits -->
            @if (Model.FullDescriptionJson?.Benefits?.Count > 0)
            {
                <div>
                    <h2 class="text-xl font-semibold text-gray-800 mb-2">Benefits</h2>
                    <ul class="list-disc list-inside text-gray-700 space-y-1">
                        @foreach (var item in Model.FullDescriptionJson.Benefits)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </div>
            }
        </div>

        <!-- Right Column -->
        <div class="bg-white p-6 rounded-2xl shadow h-fit">
            <p class="text-gray-600 font-medium mb-2">Deadline:</p>
            <p class="text-gray-900 font-semibold mb-4">July 15, 2025</p>

            <button class="w-full bg-blue-600 text-white py-2 rounded-xl font-medium hover:bg-blue-700 transition mb-3">
                ▶ Quick Apply
            </button>

            <button class="w-full border border-gray-300 text-gray-700 py-2 rounded-xl font-medium hover:bg-gray-100 transition mb-6">
                📄 Apply with Resume
            </button>

            <div class="flex items-center gap-3 mb-3">
                <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center text-gray-600 text-xl">
                    👤
                </div>
                <div>
                    <p class="text-gray-900 font-semibold">Alex Rodriguez</p>
                    <p class="text-sm text-gray-500">Hiring Manager</p>
                </div>
            </div>

            <div class="text-sm text-gray-600 space-y-1">
                <p>100 applications received</p>
                <p>25 positions available</p>
                <p>Response rate: 85%</p>
            </div>
        </div>
    </div>
</div>
