@model IEnumerable<InternSharp.Models.InternshipModel>
@{
    ViewData["Title"] = "Dashboard";
    var username = Context.Session.GetString("UserName");
}

<div class="min-h-screen flex bg-primary-50">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-md border-r border-gray-200 p-6 hidden md:block">
        <h2 class="text-lg font-bold mb-6 text-primary-600">My Dashboard</h2>
        <nav class="space-y-4">
            <a href="/Internships" class="flex items-center text-gray-700 hover:text-primary-600 transition-colors">
                <i class="bi bi-briefcase-fill mr-2"></i> Internships
            </a>
            <a href="/Jobs" class="flex items-center text-gray-700 hover:text-primary-600 transition-colors">
                <i class="bi bi-building mr-2"></i> Jobs
            </a>
            <a href="/Profile" class="flex items-center text-gray-700 hover:text-primary-600 transition-colors">
                <i class="bi bi-person-circle mr-2"></i> My Profile
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6">
        <div class="bg-white rounded-xl shadow-md p-6 mb-8">
            <h1 class="text-2xl font-bold text-gray-800 mb-4">Welcome back, @username!</h1>
            <p class="text-gray-600 mb-4">
                Here are internships recommended for you.
            </p>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-primary-100 text-primary-700 p-5 rounded-xl shadow-sm">
                    <h2 class="text-lg font-semibold mb-2">Saved Internships</h2>
                    <p class="text-3xl font-bold">4</p>
                </div>
                <div class="bg-primary-100 text-primary-700 p-5 rounded-xl shadow-sm">
                    <h2 class="text-lg font-semibold mb-2">Job Applications</h2>
                    <p class="text-3xl font-bold">2</p>
                </div>
                <div class="bg-primary-100 text-primary-700 p-5 rounded-xl shadow-sm">
                    <h2 class="text-lg font-semibold mb-2">Profile Completeness</h2>
                    <p class="text-3xl font-bold">80%</p>
                </div>
            </div>
        </div>

        <!-- Recommended Internships Section -->
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold">Recommended Internships</h2>
                <a href="/Internships" class="text-primary-600 hover:underline">See all</a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var internship in Model)
                    {
                        <div class="bg-white border border-gray-100 rounded-xl shadow hover:shadow-lg p-4">
                            <h3 class="text-lg font-semibold">@internship.Title</h3>
                            <p class="text-gray-600">@internship.CompanyName</p>
                            <div class="mt-2 flex flex-wrap gap-2 text-sm">
                                <span class="bg-primary-100 text-primary-700 px-2 py-1 rounded">@internship.InternshipType</span>
                                <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded">@internship.Duration</span>
                            </div>
                            <div class="mt-3 text-sm text-gray-500">
                                Posted @internship.CreatedDate.ToShortDateString() • @internship.Stipend
                            </div>
                            <a href="/Students/Internship" class="text-primary-600 text-sm font-medium mt-3 inline-block hover:underline">View Details</a>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center text-gray-500 py-12">
                    <p>No internships found. Please update your profile or check back later.</p>
                </div>
            }
        </div>
    </main>
</div>
