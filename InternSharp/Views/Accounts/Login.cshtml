@model InternSharp.Models.LoginModel
@{
    ViewBag.Title = "Login";
}
@* <div class="container"> *@
<div class="d-flex justify-content-center align-items-center pt-5" >
    <div class="card p-4" style="max-width: 400px; width: 100%;">
    <form action="" class="form-group">
        <div class="mb-3 bg p-4">
            <h1 class="text-center pt-3 fw-semibold">Login</h1>
            <label for="exampleFormControlInput1" class="form-label mt-5 fw-semibold">Email address </label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">

            <label for="exampleFormControlInput1" class="form-label mt-3 fw-semibold">Password </label>
            <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="Password">

            <div class="form-check pt-2">
                <input type="checkbox" class="form-check-input" id="gridCheck">
                <label for="gridCheck" class="form-check-label">Remember me </label>
                <a href="#" class="float-end">Forget password</a>
            </div>

            <button type="submit" class="form-control btn-color mt-4">Login</button>
            <div class="or text-center mt-3" style="font-size:16px;">or</div>
            <div class="login-with">
                <div class="login-other-way"><a href="#"><i class="bi bi-google"></i> Google </a></div>
                <div class="login-other-way"><a href="#"><i class="bi bi-github"></i> Github </a></div>
            </div>
        </div>
    </form>
</div>
</div>
