@model InternSharp.Models.SignInModel

<div class="min-h-screen bg-gradient-to-b from-primary-50 to-white flex items-center justify-center px-4">
    <div class="w-full max-w-lg bg-white rounded-xl shadow-lg p-8 py-10 transition-transform hover:scale-[1.01] duration-300" style="width:20vw">
        <h3 class="text-2xl font-bold text-center mb-6">Sign In</h3>

        <form asp-action="SignIn" asp-controller="Accounts" method="post">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                    <input asp-for="Email" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:outline-none" autocomplete="off" placeholder="example@email.com" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <input asp-for="Password" type="password" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:outline-none" autocomplete="new-password" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <button type="submit" class="w-full px-4 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-all duration-300 flex items-center justify-center" style="margin-top:5px">
                    <span class="material-symbols-outlined mr-2">login</span> Sign In
                </button>
                <!-- Social Login Buttons -->
                <div class="grid grid-cols-2 gap-3">
                    <a href="/Accounts/ExternalLogin?provider=Google" class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" style="margin-top:5px">
                        <i class="fa-brands fa-google text-lg mr-2"></i> Google
                    </a>
                    <a href="/Accounts/ExternalLogin?provider=GitHub" class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                        <i class="fa-brands fa-github text-lg mr-2"></i> GitHub
                    </a>
                </div>
            </div>
        </form>

     

        <p class="text-center text-sm text-gray-600 mt-6">
            Don't have an account?
            <a href="@Url.Action("SignUp", "Accounts")" class="text-primary-600 hover:underline">Create one</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
