@model InternSharp.Models.SignUpModel
@{
    ViewBag.Title = "SignIn";
}

<div class="bg-gradient-to-b from-primary-50 to-white py-12">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            <div class="mb-8 text-center">
                <h1 class="text-3xl font-bold mb-2">Account Access</h1>
                <p class="text-gray-600">Sign in to your account or create a new one to access our platform features.</p>
            </div>

            <div class="bg-white w-100 rounded-xl shadow-lg p-8 mb-8 transition-transform hover:scale-[1.01] duration-300 w-100">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 ml-10 pl-10">
                    
                    <!-- Sign In Form -->
                    <form asp-action="SignIn" asp-controller="Accounts" method="post" class="border-b md:border-b-0 md:border-r border-gray-200 pb-6 md:pb-0 md:pr-6">
                        <h3 class="text-xl font-semibold mb-4 text-center md:text-left">Sign In</h3>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2 mt-2">Email Address</label>
                                <input asp-for="Email" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:outline-none transition-colors" placeholder="example@email.com" />
                                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2 mt-2">Password</label> 
                                <input asp-for="Password" type="password" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:outline-none transition-colors" placeholder="••••••••" />
                                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                            </div>
                            <div class="flex items-center justify-between mt-3">
                                <label class="flex items-center">
                                    <input type="checkbox" class="h-4 w-4 text-primary-600 mr-2" /> <span class="text-sm text-gray-600">Remember me</span>
                                </label> 
                                <a href="#" class="text-sm text-primary-600 hover:underline">Forgot password?</a>
                            </div> 
                            <button type="submit" class="mt-3 w-full px-4 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-all duration-300 transform hover:-translate-y-1 shadow-md hover:shadow-lg flex items-center justify-center">
                                <span class="material-symbols-outlined mr-2">login</span> Sign In
                            </button>
                            <div class="relative my-6">
                                <div class="absolute inset-0 flex items-center">
                                    <div class="w-full border-t border-gray-200"></div>
                                </div>
                                <div class="relative flex justify-center text-sm">
                                    <span class="px-4 bg-white text-gray-500">Or continue with</span>
                                </div>
                            </div>

                            <!-- Social Login Buttons -->
                            <div class="grid grid-cols-2 gap-3">
                                <a href="/Accounts/ExternalLogin?provider=Google" class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                    <i class="fa-brands fa-google text-lg mr-2"></i> Google
                                </a>
                                <a href="/Accounts/ExternalLogin?provider=GitHub" class="flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                    <i class="fa-brands fa-github text-lg mr-2"></i> GitHub
                                </a>
                            </div>

                        </div>
                    </form>

                    <!-- Create Account Form -->
                    <form asp-action="Register" asp-controller="Accounts" method="post" class="pt-6 md:pt-0 md:pl-6 pl-4 ml-10 pl-10">
                        <h3 class="text-xl font-semibold mb-4 text-center md:text-left">Create Account</h3>
                        <div class="space-y-4">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2 ml-2">First Name</label> 
                                    <input asp-for="FirstName" class="w-full px-4 py-2 mt-2 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:outline-none transition-colors" placeholder="John" />
                                    <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2 ml-2">Last Name</label> 
                                    <input asp-for="LastName" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:outline-none transition-colors" placeholder="Doe" />
                                    <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2 ml-2 mt-3">Email Address</label> 
                                <input asp-for="Email" class="w-full mt-1 px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:outline-none transition-colors" placeholder="example@email.com" />
                                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2 ml-2 mt-3">Password</label> 
                                <input asp-for="Password" type="password" class="w-full px-4 mt-1 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:outline-none transition-colors" placeholder="••••••••" />
                                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                                <p class="text-xs text-gray-500 mt-2">Password must be at least 8 characters with 1 uppercase, 1 lowercase and 1 number</p>
                            </div>
                            <div class="grid grid-cols-1 gap-4 mt-2">
                                <div>
                                    <label class="block text-sm font-sm text-gray-700 mb-1">Account Type</label>
                                    <select asp-for="AccountTypeId" asp-items="Model.AccountTypes" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:outline-none transition-colors appearance-none bg-white">
                                        <option value="">Select Account Type</option>
                                    </select>
                                    <span asp-validation-for="AccountTypeId" class="text-red-500 text-sm"></span>
                                </div>
                            </div>
                            <div class="flex items-center mt-3">
                                <input type="checkbox" id="terms" class="mr-2 h-4 w-4 text-primary-600" />
                                <label for="terms" class="text-sm text-gray-600">I agree to the <a href="#" class="text-primary-600 hover:underline">terms of service</a> and <a href="#" class="text-primary-600 hover:underline">privacy policy</a>.</label>
                            </div> 
                            <button type="submit" class="w-full mt-3 px-4 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-all duration-300 transform hover:-translate-y-1 shadow-md hover:shadow-lg flex items-center justify-center">
                                <span class="material-symbols-outlined mr-2">person_add</span> Create Account
                            </button>
                        </div>
                    </form>

                </div>
            </div>

            <!-- Call-to-action section -->
            <div class="bg-gradient-to-r from-primary-600 to-primary-700 rounded-xl shadow-lg p-8 text-white">
                <div class="flex flex-col md:flex-row items-center gap-6">
                    <div class="flex-shrink-0"> 
                        <span class="material-symbols-outlined text-5xl">favorite</span> 
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-xl font-semibold mb-2">Join thousands of students finding their dream internships</h3>
                        <p class="mb-4">
                            Create your account now to browse exclusive opportunities, build your profile, and connect with top employers.
                        </p>
                        <div class="flex flex-wrap gap-3">
                            <button class="px-4 py-2 bg-white text-primary-700 rounded-lg hover:bg-gray-100 transition-colors flex items-center">
                                <span class="material-symbols-outlined mr-1">work</span> Browse Opportunities
                            </button> 
                            <button class="px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-400 transition-colors flex items-center">
                                <span class="material-symbols-outlined mr-1">school</span> Student Resources
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
