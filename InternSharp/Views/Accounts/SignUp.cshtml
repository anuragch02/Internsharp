@model InternSharp.Models.SignUpModel
@{
    ViewBag.Title = "SignUp";
}
<div class="min-h-screen bg-gradient-to-b from-primary-50 to-white flex items-center justify-center px-4">
    <div class="w-full max-w-lg bg-white rounded-xl shadow-lg p-8 py-10 transition-transform hover:scale-[1.01] duration-300" style="width:25vw">
        <h3 class="text-2xl font-bold text-center mb-6">Create Account</h3>

        <form asp-action="SignUp" asp-controller="Accounts">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                    <input asp-for="FirstName" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500" placeholder="John" />
                    <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                    <input asp-for="LastName" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500" placeholder="Doe" />
                    <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                </div>
            </div>
            <div class="mt-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                <input asp-for="Email" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500" autocomplete="off" placeholder="example@email.com" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            <div class="mt-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input asp-for="Password" type="password" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg focus:border-primary-500" autocomplete="new-password" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                <p class="text-xs text-gray-500 mt-1">Password must be at least 8 characters with 1 uppercase, 1 lowercase and 1 number</p>
            </div>
            <div class="mt-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Account Type</label>
                <select asp-for="AccountTypeId" asp-items="ViewBag.AccountTypes" class="w-full px-4 py-2 border-2 border-gray-200 rounded-lg bg-white focus:border-primary-500">
                    <option value="">Select Account Type</option>
                </select>
                <span asp-validation-for="AccountTypeId" class="text-red-500 text-sm"></span>
            </div>
            <div class="mt-4 flex items-start">
                <input type="checkbox" id="terms" class="mr-2 h-4 w-4 text-primary-600" />
                <label for="terms" class="text-sm text-gray-600">
                    I agree to the <a href="#" class="text-primary-600 hover:underline">terms of service</a> and <a href="#" class="text-primary-600 hover:underline">privacy policy</a>.
                </label>
            </div>
            <button type="submit" class="mt-6 w-full px-4 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-all duration-300 flex items-center justify-center" style="margin-top:3px">
                <span class="material-symbols-outlined mr-2">person_add</span> Create Account
            </button>

            <p class="text-center text-sm text-gray-600 mt-2">
                Already have an account?
                <a href="@Url.Action("SignIn", "Accounts")" class="text-primary-600 hover:underline">Sign in</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}