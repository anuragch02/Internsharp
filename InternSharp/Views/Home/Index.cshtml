@model IEnumerable<InternSharp.Models.InternshipModel>
@{
    ViewData["Title"] = "Home Page";
}
<div class="bg-gradient-to-b from-primary-50 to-white py-8">
    <div class="container mx-auto px-4">
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 transform transition-transform hover:shadow-xl">
            <div class="flex flex-col md:flex-row justify-between gap-4">
                <div class="flex-grow">
                    <div class="relative">
                        @* <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">search</span> *@
                        <input type="text" placeholder="Search internships, companies, or skills" class="w-full pl-10 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:border-primary-500 focus:outline-none transition-colors" />
                    </div>
                </div>
                <div class="flex flex-col md:flex-row gap-3">
                    <details class="relative group">
                        <summary class="flex items-center px-4 py-3 rounded-lg cursor-pointer transition-colors filter">
                            <span class="material-symbols-outlined msr-2"><i class="bi bi-funnel mr-2"> </i> </span>  Filters <span class="material-symbols-outlined ml-2"> <i class="bi bi-chevron-down"></i></span>
                        </summary>
                        <div class="absolute right-0 mt-2 w-64 bg-white rounded-lg shadow-lg p-4">
                            <div class="mb-4">
                                <h3 class="font-semibold mb-2">Job Type</h3>
                                <div class="space-y-2">
                                    <label class="flex items-center">
                                        <input type="checkbox"
                                               class="mr-2 h-4 w-4 text-primary-600" /> Remote
                                    </label> <label class="flex items-center">
                                        <input type="checkbox" class="mr-2 h-4 w-4 text-primary-600" /> On-site
                                    </label> <label class="flex items-center">
                                        <input type="checkbox" class="mr-2 h-4 w-4 text-primary-600" />
                                        Hybrid
                                    </label>
                                </div>
                            </div>
                            <div class="mb-4">
                                <h3 class="font-semibold mb-2">Duration</h3>
                                <div class="space-y-2">
                                    <label class="flex items-center">
                                        <input type="checkbox"
                                               class="mr-2 h-4 w-4 text-primary-600" /> Summer
                                    </label> <label class="flex items-center">
                                        <input type="checkbox" class="mr-2 h-4 w-4 text-primary-600" /> 3 Months
                                    </label> <label class="flex items-center">
                                        <input type="checkbox" class="mr-2 h-4 w-4 text-primary-600" /> 6
                                        Months
                                    </label>
                                </div>
                            </div> <button class="w-full py-2 rounded-lg transition-colors apply-btn">
                                Apply
                                Filters
                            </button>
                        </div>
                    </details>
                    <details class="relative group">
                        <summary class="flex items-center px-4 py-3 rounded-lg cursor-pointer transition-colors filter">
                            <span class="material-symbols-outlined mr-2"><i class="bi bi-bar-chart-fill  mr-2"></i> </span> Sort <span class="material-symbols-outlined ml-2"> <i class="bi bi-chevron-down"></i> </span>
                        </summary>
                        <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg p-4 z-10">
                            <div class="space-y-2">
                                <button class="block w-full text-left px-3 py-2 rounded-lg transition-colors">
                                    Latest
                                    first
                                </button> <button class="block w-full text-left px-3 py-2 rounded-lg  transition-colors">
                                    Oldest
                                    first
                                </button> <button class="block w-full text-left px-3 py-2 rounded-lg transition-colors">
                                    Relevance
                                </button>
                                <button class="block w-full text-left px-3 py-2 rounded-lg transition-colors">
                                    Salary:
                                    High ato Low
                                </button> <button class="block w-full text-left px-3 py-2 rounded-lg transition-colors">
                                    Salary: Low to High
                                </button>
                            </div>
                        </div>
                    </details>
                </div>
            </div>
        </div>
        <div class="mb-6 flex flex-col md:flex-row justify-between items-center hero-section">
            <h2 class="text-xl font-bold mb-2 md:mb-0">Search Results</h2>
            <div class="flex items-center space-x-2">
                <span>128 internships found</span> <span class="text-primary-600">•</span> <span>Page 1 of 13</span>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-6">
            @foreach (var item in Model)
            {
                <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden border border-gray-100 group">
                    <div class="p-5">
                        <div class="flex justify-between items-start">
                            <div class="flex items-center">
                                @* <img src="@item.LogoUrl" alt="@item.Company Logo" class="h-10 w-10 mr-3 bg-gray" /> *@
                                <div style="cursor:pointer;">
                                    <h3 class="font-bold" style="font-size:18px;">
                                        <a style="color:black;" asp-controller="Students" asp-action="Internship" asp-route-id="@item.ID">@item.Title</a>
                                    </h3>
                                    <p class="text-gray-600">@item.CompanyName</p>
                                </div>
                            </div>
                            <button class="p-2 text-gray-400 hover:text-primary-500 transition-colors">
                                <span class="material-symbols-outlined">bookmark</span>
                            </button>
                        </div>
                        <div class="flex flex-wrap gap-2 mb-3">
                            <span class="px-3 py-1 bg-primary-100 text-primary-700 text-xs rounded-full">@item.InternshipType</span>
                            <span class="px-3 py-1 bg-gray-100 text-gray-700 text-xs rounded-full">@item.Duration</span>
                        </div>
                        <p class="text-gray-600 mb-4 line-clamp-3">@item.ShortDescription</p>
                        <div class="flex justify-between items-center pt-3 border-t border-gray-100">
                            <span class="font-semibold text-primary-600">@item.Stipend</span>
                            <span class="text-gray-500 text-sm">Posted 2days ago</span>
                        </div>
                    </div>
                    <div class="bg-gray-50 px-5 py-3 group-hover:bg-gray-100 transition-colors">
                        <a asp-controller="Students" asp-action="Internship" asp-route-id="@item.ID"
                           class="text-primary-600 font-medium hover:text-primary-700 transition-colors flex items-center">
                            View Details
                            <span class="material-symbols-outlined ml-1 text-sm transform group-hover:translate-x-1 transition-transform">arrow_forward</span>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="mt-10 flex justify-center">
            <nav class="inline-flex rounded-md shadow">
                <a href="#" class="px-4 py-2 text-sm font-medium rounded-l-md bg-primary-50 text-primary-600 hover:bg-primary-100 transition-colors">Previous</a>
                <a href="#" class="px-4 py-2 text-sm font-medium bg-primary-600 text-white">1</a> 
                <a href="#" class="px-4 py-2 text-sm font-medium bg-white text-gray-700 hover:bg-primary-100 transition-colors">2</a>
                <a href="#" class="px-4 py-2 text-sm font-medium bg-white text-gray-700 hover:bg-primary-100 transition-colors">3</a>
                <a href="#" class="px-4 py-2 text-sm font-medium bg-white text-gray-700 hover:bg-primary-100 transition-colors">4</a>
                <a href="#" class="px-4 py-2 text-sm font-medium bg-white text-gray-700 hover:bg-primary-100 transition-colors">5</a>
                <a href="#" class="px-4 py-2 text-sm font-medium rounded-r-md bg-white text-gray-700 hover:bg-primary-100 transition-colors">Next</a>

            </nav>
        </div>
        <div class="mt-12 bg-primary-50 rounded-xl p-8 border border-primary-100">
            <div class="flex flex-col md:flex-row items-center">
                <div class="mb-6 md:mb-0 md:mr-8">
                    <svg class="w-32 h-32 text-primary-500" viewBox="0 0 24 24" fill="none" 
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 11L12 14L20 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                              stroke-linejoin="round"></path>
                        <path d="M20 12V18C20 19.1046 19.1046 20 18 20H6C4.89543 20 4 19.1046 4 18V6C4 4.89543 4.89543 4 6 4H16"
                              stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                </div>
                <div class="text-center md:text-left">
                    <h3 class="text-xl font-bold mb-2" style="font-size:18px;">Get personalized internship recommendations</h3>
                    <p class="text-gray-600 mb-4">
                        Create a profile to receive tailored internship recommendations based on
                        your skills, interests, and experience.
                    </p> <button class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors shadow-md hover:shadow-lg transform hover:-translate-y-1 transition-transform">
                        Create Your Profile
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

